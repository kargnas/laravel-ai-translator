{
    "name": "kargnas/laravel-ai-translator",
    "version": "1.7.19",
    "description": "AI-powered translation tool for Laravel language files",
    "keywords": [
        "kargnas",
        "laravel-ai-translator",
        "ai",
        "translator",
        "translate",
        "gpt",
        "claude"
    ],
    "license": "MIT",
    "homepage": "https://kargn.as/projects/laravel-ai-translator",
    "type": "library",
    "authors": [
        {
            "name": "Sangrak Choi",
            "email": "kars@kargn.as",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "crowdin/crowdin-api-client": "^1.14",
        "google-gemini-php/client": "^1.0|^2.0",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "guzzlehttp/promises": "^1.0|^2.0",
        "illuminate/support": ">=8.0",
        "openai-php/client": ">=0.2 <1.0",
        "symfony/process": "^5.0|^6.0|^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "pestphp/pest": "^1.0|^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^1.0|^2.0|^3.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/invade": "^2.1"
    },
    "suggest": {
        "laravel/framework": "Required for using this package with Laravel"
    },
    "autoload": {
        "psr-4": {
            "Kargnas\\LaravelAiTranslator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kargnas\\LaravelAiTranslator\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kargnas\\LaravelAiTranslator\\ServiceProvider"
            ]
        }
    }
}
